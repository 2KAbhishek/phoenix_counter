<div class="flex flex-col items-center justify-center h-screen bg-black-200">
  <h1 class="text-5x1 font-medium text-purple-500">Phoenix Counter</h1>
  <span class="m-5 text-9x1"><%= @count %></span>
  <section>
    <button phx-click="decrement" class="px-4 py-2 text-white bg-red-500 rounded">-</button>
    <button phx-click="clear" class="px-4 py-2 text-white bg-gray-500 rounded">Clear</button>
    <button phx-click="increment" class="px-4 py-2 text-white bg-green-500 rounded">+</button>
  </section>
</div>
